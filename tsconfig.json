{
	"compilerOptions": {
		"outFile": "app/squares.js",
		"composite": true,
		"module": "system",
		"moduleResolution": "node",
		"target": "esnext",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"baseUrl": "./",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": true,
		"incremental": true,
		"preserveConstEnums": true,
		"lib": [
			"dom",
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		]
	},
	"include": [
		"core/**/*.ts",
		"node_modules/@squaresapp/rawjs/*.ts",
		"node_modules/@squaresapp/hatjs/*.ts",
		"node_modules/fila-core/*.ts",
		"node_modules/fila-node/*.ts",
		"node_modules/fila-keyva/*.ts",
		"node_modules/fila-capacitor/*.ts",
		"node_modules/fila-tauri/*.ts",
	],
	"references": [
		{ "path": "../Query" },
		{ "path": "../Not" },
		{ "path": "../Force" },
		{ "path": "../Keyva" },
		{ "path": "../Webfeed" },
		{ "path": "../Dock" }
	]
}
