{
	"compilerOptions": {
		"outFile": "+build/scroll.debug.js",
		"composite": true,
		"module": "system",
		"moduleResolution": "node",
		"target": "esnext",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"baseUrl": "./",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": true,
		"incremental": true,
		"preserveConstEnums": true,
		"lib": [
			"dom",
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		]
	},
	"exclude": [
		"**/+*/**/*.ts",
		"ios/**/*.ts",
		"android*/**/*.ts",
		"vite.config.ts"
	],
	"references": [
		{ "path": "../Raw" },
		{ "path": "../Hat" },
		{ "path": "../Query" },
		{ "path": "../Not" },
		{ "path": "../Force" },
		{ "path": "../Fila" },
		{ "path": "../FilaCapacitor", "if": "CAPACITOR" },
		{ "path": "../FilaTauri", "if": "TAURI" },
		{ "path": "../FilaNode", "if": "ELECTRON" },
		{ "path": "../FilaKeyva", "if": "DEMO" },
		{ "path": "../Keyva", "if": "DEMO" },
		{ "path": "../HtmlFeedJS" },
		{ "path": "../Dock" }
	]
}
